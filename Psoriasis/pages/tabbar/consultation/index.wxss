.container .nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  box-shadow: 5rpx 1rpx 27rpx 10rpx rgba(0, 0, 0, 0.05);
}

.container .nav_v {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .nav_active {
  color: #333333 !important;
}

.container .nav_title {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  width: 112px;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
  text-shadow: 0px 1rpx 27rpx rgba(0, 0, 0, 0.05);
}

.container .nav_hr {
  position: absolute;
  bottom: 0%;
  left: 26%;
  width: 120rpx;
  height: 6rpx;
  background: #0A9E67;
  box-shadow: 0px 1rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 3rpx;
}

.container .hotCompany {
  font-family: PingFangSC-Medium, PingFang SC;
}

.container .hotCompany .hotCompany_item {
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 40rpx;
  width: 686rpx;
  height: 216rpx;
  background: #FFFFFF;
  box-shadow: 2px 1px 20px rgba(0, 0, 0, 0.1);
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container .hotCompany .hotCompany_item .hotCompany_top {
  display: flex;
  align-items: center;
  height: 100rpx;
  width: 100%;
}

.container .hotCompany .hotCompany_item .hotCompany_top .hotCompany_topImg {
  width: 80rpx;
  height: 80rpx;
}

.container .hotCompany .hotCompany_item .hotCompany_top .hotCompany_topFont {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-left: 40rpx;
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.container .hotCompany .hotCompany_item .hotCompany_bottom {
  margin-top: 25rpx;
  display: flex;
  align-items: center;
  height: 50rpx;
  width: 100%;
}

.container .hotCompany .hotCompany_item .hotCompany_bottom .hotCompany_bomImg {
  height: 30rpx;
  min-width: 30rpx;
  max-width: 30rpx;
}

.container .hotCompany .hotCompany_item .hotCompany_bottom .hotCompany_bomFont {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #666666;
}

.container .hotCompany .hotCompany_item .hotCompany_rank {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  min-width: 133rpx;
  padding: 0 10rpx;
  height: 43rpx;
  background: #FA8D4C;
  border-radius: 67rpx 0px 0px 67rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .hotCompany .hotCompany_item .hotCompany_rank .rankIng_font {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #FFFFFF;
}

.container .hotExhibit {
  font-family: PingFangSC-Medium, PingFang SC;
}

.container .hotExhibit .hotExhibit_item {
  width: 686rpx;
  height: 322rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 40rpx;
  background: #FFFFFF;
  box-shadow: 2px 1px 20px rgba(0, 0, 0, 0.1);
  border-radius: 20px;
  display: flex;
  align-items: center;
  position: relative;
}

.container .hotExhibit .hotExhibit_item .hotExhibit_img {
  width: 240rpx;
  height: 240rpx;
}

.container .hotExhibit .hotExhibit_item .hotExhibit_right {
  flex: 1;
  margin-left: 32rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.container .hotExhibit .hotExhibit_item .hotExhibit_right .hotExhibit_title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.container .hotExhibit .hotExhibit_item .hotExhibit_right .hotExhibit_company {
  font-size: 24rpx;
  color: #666666;
}

.container .hotExhibit .hotExhibit_item .hotExhibit_rank {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  min-width: 133rpx;
  padding: 0 10rpx;
  height: 43rpx;
  background: #FA8D4C;
  border-radius: 67rpx 0px 0px 67rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .hotExhibit .hotExhibit_item .hotExhibit_rank .rankIng_font {
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #FFFFFF;
}