.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  box-shadow: 5rpx 1rpx 27rpx 10rpx rgba(0, 0, 0, 0.05);
}
.nav_v {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nav_active {
  color: #333333 !important;
}
.nav_title {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  width: 112px;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
  text-shadow: 0px 1rpx 27rpx rgba(0, 0, 0, 0.05);
}
.nav_hr {
  position: absolute;
  bottom: 0%;
  left: 34%;
  width: 120rpx;
  height: 6rpx;
  background: #0A9E67;
  box-shadow: 0px 1rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 3rpx;
}
.z_conference {
  font-family: PingFangSC-Medium, PingFang SC;
}
.z_conference .z_conference_item {
  margin-top: 40rpx;
  border-bottom: 1rpx solid #E9E9E9;
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 260rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-bottom: 32rpx;
}
.z_conference .z_conference_item .z_conference_img {
  position: relative;
  width: 320rpx;
  height: 240rpx;
  border-radius: 18rpx;
  margin-right: 20rpx;
}
.z_conference .z_conference_item .z_conference_itemInfo {
  height: 240rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}
.z_conference .z_conference_item .z_conference_itemInfo .z_conference_itemTitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.z_conference .z_conference_item .z_conference_itemInfo .z_conference_itemSpecial {
  color: #666666;
}
.z_conference .z_conference_item .z_conference_itemInfo .z_conference_itemDetail {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-weight: 400;
  color: #999999;
}
.tips {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  min-width: 80rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
  color: white;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 20rpx;
}
.tips .liveIng {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 12rpx;
  border-radius: 16rpx;
}
.tips .popularity {
  min-width: 50rpx;
  display: flex;
  align-items: center;
  padding-left: 5rpx;
  padding-right: 20rpx;
}
