/* pages/setuserinfo/index.wxss */
page {
  background: #059d67;
}

.lar-bg {
  background-color: #fff;
  font-family: PingFang-SC-Regular;
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  height: 100vh;
  width: 100vw;
}

.img {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translate(-50%);
  width: 224rpx;
  height: 224rpx;
}

.btner {
  padding: 0;
  line-height: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 480rpx;
  height: 99rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  background: #0A9E67;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  border-radius: 20rpx;
}

button::after {
  border: none;
}