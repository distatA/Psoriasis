    <view class="title" style="padding:0rpx;margin-bottom:10rpx;">
        <view class="title_interval"></view>
        <view class="title_font">企业介绍</view>
    </view>
    <template is="wxParse" data="{{wxParseData:txtNew.nodes}}" />
</view>