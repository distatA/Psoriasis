.container {
  font-family: PingFangSC-Regular, PingFang SC;
  padding: 30rpx;
}

.container .liveForeshow {
  height: 70rpx;
  width: 100%;
  display: flex;
  align-items: center;
  margin: 40rpx 0rpx;
}

.container .liveForeshow .swiper {
  width: 600rpx;
  height: 42rpx;
  border: 2rpx solid #FF8660;
  border-radius: 24rpx;
}

.container .liveForeshow .swiper swiper {
  height: 100%;
  width: 100%;
}

.container .liveForeshow .swiper_item {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .liveForeshow .foreshowFont {
  flex: 1;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  display: flex;
  align-items: center;
  display: -webkit-box;
  padding: 0 20rpx;
  font-size: 22rpx;
  color: #FF8660;
}

.container .banner {
  width: 686rpx;
  height: 345rpx;
  margin: 0 auto;
}

.container .banner {
  width: 686rpx;
  height: 343rpx;
  margin: 0 auto;
}

.container .banner .imgBox {
  width: 100%;
  height: 100%;
  border-radius: 18rpx;
}

.container .banner .banner-image {
  width: 100% !important;
  height: 100% !important;
}

.container .van-tabs--line .van-tabs__wrap {
  margin-top: 40rpx;
}

.container .van-tabs__line {
  background-color: #0A9E67;
}

.container .z_conference_item {
  margin-top: 40rpx;
  border-bottom: 1rpx solid #E9E9E9;
  box-sizing: border-box;
  padding: 0 30rpx 0 0;
  height: 260rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-bottom: 32rpx;
}

.container .z_conference_item .z_conference_img {
  position: relative;
  width: 320rpx;
  height: 240rpx;
  border-radius: 18rpx;
  margin-right: 20rpx;
}

.container .z_conference_item .z_conference_itemInfo {
  height: 240rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}

.container .z_conference_item .z_conference_itemInfo .z_conference_itemTitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.container .z_conference_item .z_conference_itemInfo .z_conference_itemSpecial {
  color: #666666;
}

.container .z_conference_item .z_conference_itemInfo .z_conference_itemDetail {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  font-weight: 400;
  color: #999999;
}

.container .tips {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  min-width: 80rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
  color: white;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 20rpx;
}

.container .tips .liveIng {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0 12rpx;
  border-radius: 16rpx;
}

.container .tips .popularity {
  min-width: 50rpx;
  display: flex;
  align-items: center;
  padding-left: 5rpx;
  padding-right: 20rpx;
}

.container .nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  box-sizing: border-box;
}

.container .nav_v {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.container .nav_active {
  color: #333333 !important;
}

.container .nav_title {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  flex: 1;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #999999;
  text-shadow: 0px 1rpx 27rpx rgba(0, 0, 0, 0.05);
}

.container .nav_hr {
  position: absolute;
  bottom: 0%;
  left: auto;
  width: 120rpx;
  height: 6rpx;
  background: #0A9E67;
  box-shadow: 0px 1rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 3rpx;
}