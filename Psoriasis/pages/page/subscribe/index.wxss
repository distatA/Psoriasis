.box {
  font-family: PingFangSC-Regular, PingFang SC;
  background: #0A9E67;
  display: flex;
  justify-content: center;
  padding: 40rpx 0rpx;
  box-sizing: border-box;
  /* height: 100vh; */

}

/* .boxSTyle {
  height: 100vh !important;
} */

.box .getPhonebtn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #0A9E67;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.box .container {
  box-sizing: border-box;
  padding: 40rpx;
  width: 686rpx;
  background: #FFFFFF;
  border-radius: 20px;
}

.box .container .van-field__label {
  width: 65rpx !important;
}

.box .container .van-cell__title {
  max-width: 2rem !important;
  min-width: 2rem !important;
  margin-right: 0 !important;
}

.box .container .btn {
  height: 48rpx;
  background: rgba(10, 158, 103, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  border: 1px solid #0A9E67;
  font-size: 24rpx;
  font-weight: 400;
  color: #0A9E67;
  padding: 0 10rpx;
  width: 200rpx;
}

.box .container .areaPicker {
  display: flex;
  align-items: center;
  min-width: 100rpx;
}

.box .container .textArea {
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 40rpx;
  width: 606rpx;
  min-height: 544rpx;
  background: #EEEEEE;
  border-radius: 20rpx;
}

.box .container .van-cell {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  margin-top: 10rpx;
  padding: 15px 0rpx;
}

.box .container .van-cell::after {
  border-bottom: 1px solid transparent;
}

.box .container .join {
  width: 320rpx !important;
}

.box .container .join .van-field__label {
  width: 320rpx !important;
}

.box .container .code .van-field__label {
  width: 150rpx !important;
}

.box .container .code .van-field__input {
  padding-left: 85rpx;
}

.box .container .van-field__label--disabled {
  color: #666666;
}

.box .container .xieyi {
  margin-left: 22rpx;
  border-bottom: 1rpx solid #666666;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #666666;
}

.box .container .signUpBtn {
  width: 480rpx;
  height: 99rpx;
  background: #0A9E67;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  margin: 50rpx auto;
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.box .container .signUpBtnDisable {
  background: #CCCCCC !important;
  width: 480rpx;
  height: 99rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  margin: 50rpx auto;
  font-size: 32rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.5);
}

.box .sfz .van-field__label {
  width: 120rpx !important;
}

.box .sfz .van-field__input {
  padding-left: 55rpx;
}

.box .upLoad {
  margin-top: 50rpx;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.box .upLoad .picBox {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.box .upLoad .picBox .zheng,
.box .upLoad .picBox .bei {
  width: 280rpx;
  height: 200rpx;
}

.box .upLoad .picBox .zheng,
.box .upLoad .picBox .bei {
  position: relative;
}

.box .upLoadFont {
  margin-top: 25rpx;
  font-size: 24rpx;
  color: #999999;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.box .zhengUpload,
.box .beiUpload {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  z-index: 1111;
}

.box .zhengUpload .van-uploader__upload,
.box .beiUpload .van-uploader__upload {
  width: 280rpx !important;
  height: 200rpx !important;
  background-color: #8d8d8d;
  opacity: 0;
}

.box .mask {
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100%;
  background-color: rgba(32, 30, 30, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.box .mask .tipsBox {
  height: 80vh;
  width: 80vw;
  background-color: white;
  border-radius: 30rpx;
}