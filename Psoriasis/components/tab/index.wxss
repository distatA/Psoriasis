.nav {
    width: 100%;
    height: 100rpx;
    display: flex;
}


.nav_v {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav_active {
    color: #333333 !important;
}

.nav_title {
    width: 100%;
    text-align: center;
    line-height: 80rpx;
    color: rgba(153, 153, 153, 1);
    width: 112px;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #999999;
    text-shadow: 0px 1rpx 27rpx rgba(0, 0, 0, 0.05);
}

.nav_hr {
    position: absolute;
    bottom: 0%;

    left: 26%;
    width: 120rpx;
    height: 6rpx;
    background: #0A9E67;
    box-shadow: 0px 1rpx 27rpx 0px rgba(0, 0, 0, 0.05);
    border-radius: 3rpx;
}